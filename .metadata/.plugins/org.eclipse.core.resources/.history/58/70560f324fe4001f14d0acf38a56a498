    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const cardContainer = document.getElementById("card-container");
            const searchBox = document.getElementById("search-box");
            const searchBtn = document.getElementById("search-btn");
            
            const data = [
                { name: "Aê³ ì‹œì›", location: "ì„œìš¸", img: "image.png" },
                { name: "Bê³ ì‹œì›", location: "ë¶€ì‚°", img: "image.png" },
                { name: "Cê³ ì‹œì›", location: "ì„œìš¸", img: "image.png" }
            ];
            
            function renderCards(filter = "") {
                cardContainer.innerHTML = "";
                data.forEach(item => {
                    if (item.name.includes(filter) || item.location.includes(filter)) {
                        const card = document.createElement("div");
                        card.classList.add("card");
                        card.innerHTML = `
                            <img src="${item.img}" alt="${item.name}">
                            <h3>${item.name}</h3>
                            <p>${item.location}</p>
                        `;
                        cardContainer.appendChild(card);
                    }
                });
            }
            
            searchBtn.addEventListener("click", () => {
                renderCards(searchBox.value);
            });
            
            renderCards();
        });
    </script>
